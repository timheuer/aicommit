<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	  <PackAsTool>true</PackAsTool>
	  <ToolCommandName>aicommit</ToolCommandName>
	  <PackageOutputPath>./nupkg</PackageOutputPath>
	  <Title>AI Commits</Title>
	  <PackageId>TimHeuer.Git.AICommit</PackageId>
	  <Authors>TimHeuer</Authors>
	  <Company>Tim Heuer</Company>
	  <Description>A quick command to look at staged git activity and offer an AI-generated commit message.</Description>
	  <PackageProjectUrl>https://github.com/timheuer/aicommits</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/timheuer/aicommits</RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.AI.OpenAI" Version="1.0.0-beta.2" />
    <PackageReference Include="CliWrap" Version="3.6.0" />
    <PackageReference Include="Spectre.Console" Version="0.46.0" />
  </ItemGroup>

</Project>
